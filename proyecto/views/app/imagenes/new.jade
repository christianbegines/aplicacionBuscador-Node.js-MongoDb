extends ../../layout.jade
block contenido
	form(action="/app/imagenes" method="POST")
		div(class="panel_login")
			h1(class="fuente fuente--grande") Subir nueva imagen
			div(class="panel_login-name")
				label(class="fuente fuente--grande" for="title") Titulo
				input(class="panel-input_texto" type="text" ,name="title",placeholder="Titulo de la imagen ...",id="title" )
			div(class="panel_login-pass")
				label(class="fuente fuente--grande" for="archivo") Imagen
				input(class="panel-input_texto" type="file" ,name="archivo",id="archivo" )
			div(class="panel-enviar_login")
				input(type="submit" value="Subir imagen" class="boton fuente")
